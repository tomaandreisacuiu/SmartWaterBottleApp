<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity2"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Suggested Water Intake: "
                android:id="@+id/intakeView"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text=""
                android:id="@+id/intakeViewValue"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:layout_marginTop="0sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Sex:"
                android:id="@+id/genderView"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Woman"
                android:id="@+id/genderViewValue"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:layout_marginTop="0sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Weight:"
                android:id="@+id/weightView"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="55 kg"
                android:id="@+id/weightViewValue"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:layout_marginTop="0sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Times/ week walking"
                android:id="@+id/walkingView"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="4"
                android:id="@+id/walkingViewValue"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:layout_marginTop="0sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Times/ week cycling"
                android:id="@+id/cyclingView"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="2"
                android:id="@+id/cyclingViewValue"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:layout_marginTop="0sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Times/ week running"
                android:id="@+id/runningView"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="0"
                android:id="@+id/runningViewValue"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:layout_marginTop="0sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Times/ week gym"
                android:id="@+id/gymView"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="1"
                android:id="@+id/gymViewValue"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:layout_marginTop="0sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Times/ week swimming"
                android:id="@+id/swimView"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="0"
                android:id="@+id/swimViewValue"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:layout_marginTop="0sp"/>

            <Button
                android:id="@+id/editMyDetailsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHANGE DETAILS"
                android:layout_marginTop="5sp"/>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        />

</androidx.drawerlayout.widget.DrawerLayout>